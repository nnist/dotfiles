##### Input settings ##########################################################
input type:keyboard {
    xkb_layout us
    xkb_variant intl
    xkb_options caps:hyper
    repeat_delay 300
    repeat_rate 50
}

input type:touchpad {
    natural_scroll enabled
    tap enabled
}

input type:pointer {
    accel_profile flat
    pointer_accel .4
    scroll_factor 1.5
}

seat seat0 hide_cursor 3000

# Special key bindings
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2%+ unmute && amixer sget Master | grep 'Right:' | awk -F'[][]' '{ print substr($2, 0, length($2)-1) }' > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec amixer -q set Master 2%- unmute && amixer sget Master | grep 'Right:' | awk -F'[][]' '{ print substr($2, 0, length($2)-1) }' > $SWAYSOCK.wob
bindsym XF86AudioMute exec (amixer get Master | grep off > /dev/null && amixer -q set Master unmute && amixer sget Master | grep 'Right:' | awk -F'[][]' '{ print substr($2, 0, length($2)-1) }' > $SWAYSOCK.wob) || (amixer -q set Master mute && echo 0 > $SWAYSOCK.wob)

bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && brightnessctl -m | cut -d',' -f4 | sed 's/%//g' > $SWAYSOCK.wob
bindsym XF86MonBrightnessUp exec brightnessctl set +5% && brightnessctl -m | cut -d',' -f4 | sed 's/%//g' > $SWAYSOCK.wob

##### Lockscreen ##############################################################
exec swayidle -w \
         timeout 300 'swaylock -f -c 181818' \
         timeout 600 'swaymsg "output * dpms off"' \
              resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 181818'

##### Status bar ##############################################################
bar {
    position bottom

    font Hack 9

    separator_symbol "·"

    status_command while ~/.config/sway/scripts/sway_bar.sh; do sleep 5; done

    tray_padding 2
    tray_output *

    colors {
        statusline #D8D8D8
        background #181818
        separator  #D8D8D8
        
                           #border #bg     #text
        focused_workspace  #7CAFC2 #7CAFC2 #181818
        inactive_workspace #181818 #181818 #D8D8D8
        active_workspace   #181818 #181818 #D8D8D8
        urgent_workspace   #AB4642 #AB4642 #181818
    }
}

##### FZF app launcher ########################################################
bindsym $mod+g exec alacritty  --class=launcher \
    -e "./git/dotfiles/scripts/fzf-launcher.sh"
for_window [app_id="^launcher$"] floating enable, border pixel

##### Launch ##################################################################
output '*' bg '~/Pictures/background.jpg' fill
output 'eDP-1' scale 2
exec "~/git/dotfiles/scripts/create-workspace.sh 1 task-management "
exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob -o 4 -b 0 -p 0 -a bottom -M 100
exec "~/.local/bin/redshift -l 52.09:5.11 -b 1.0:1.0 -t 6500:1900"
